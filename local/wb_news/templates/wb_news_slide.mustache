{{!
    @template local_wb_news/wb_news_slide

    Classes required for JS:
    * none

    Example context (json):
    {
        "lightmode": true,
        "cssclasses": "bg-dark p-5",
        "tags": ["Update", "Feature", "Release"],
        "headline": "Moodle 4.5: Now with AI Integration",
        "description": "<p>Moodle 4.5 introduces seamless AI tools for grading, feedback, and student engagement.</p>",
        "btntext": "Read More",
        "btnlink": "https://moodle.example.com/news/moodle45-ai",
        "btnlinktarget": "_blank",
        "btnlinkrel": "noopener",
        "dontshowarrows": false,
        "instanceid": 7,
        "editmode": false,
        "bgimage": "https://moodle.example.com/images/slide-bg.jpg",
        "headerimage": "/local/wb_news/img/wb.jpg",
        "bgimagetext": "AI interface background",
        "headerimagetext": "Header Image Text",
        "imagecaption": "Screenshot of the new AI grading interface"
    }
}}

<div class="d-flex justify-content-between align-items-center wb_news_slide">
    <div class="left-panel{{#lightmode}} text-light{{/lightmode}}{{#cssclasses}} {{cssclasses}}{{/cssclasses}}">
        {{#tags}} <span class="badge badge-success">{{.}}</span>{{/tags}}
        {{#headline}}
            <h1>{{{headline}}}</h1>
        {{/headline}}
        {{{description}}}
        {{#btntext}}
        <a href="{{btnlink}}" class="btn btn-primary mt-4" {{#btnlinktarget}}target="{{.}}"{{/btnlinktarget}} {{#btnlinkrel}}rel="{{.}}"{{/btnlinkrel}}>{{btntext}}</a>
        {{/btntext}}
        {{^dontshowarrows}}
            <div class="row mt-4 justify-content-center">
                <a class="carousel-control-prev mt-4 mr-2" href="#wb_news_carousel-{{instanceid}}" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" title="{{#str}} previous, local_wb_news {{/str}}"></span>
                    <span class="sr-only">{{#str}} previous, local_wb_news {{/str}}</span>
                </a>
                <a class="carousel-control-next mt-4 ml-2" href="#wb_news_carousel-{{instanceid}}" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" title="{{#str}} next, local_wb_news {{/str}}"></span>
                    <span class="sr-only">{{#str}} next, local_wb_news {{/str}}</span>
                </a>
            </div>
        {{/dontshowarrows}}
        {{#editmode}}
        {{> local_wb_news/editsinglenews}}
        {{/editmode}}
    </div>
    <div class="right-panel">
        <div class="image-container w-100">
            <img src="{{bgimage}}{{headerimage}}" class="img-fluid w-100" aria-label="{{bgimagetext}}{{headerimagetext}}" alt="{{bgimagetext}}{{headerimagetext}}">
            {{#imagecaption}}
            <div class="image-caption">{{imagecaption}}</div>
            {{/imagecaption}}
        </div>
    </div>
</div>
